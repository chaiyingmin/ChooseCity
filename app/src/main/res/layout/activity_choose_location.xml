<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ListView
        android:id="@+id/activity_choose_location_province"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/color_divider"
        android:dividerHeight="@dimen/default_line"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <com.choosecity.choosecity.LineView
        android:layout_width="@dimen/default_line"
        android:layout_height="match_parent" />

    <ListView
        android:id="@+id/activity_choose_location_city"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/color_divider"
        android:dividerHeight="@dimen/default_line"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <com.choosecity.choosecity.LineView
        android:layout_width="@dimen/default_line"
        android:layout_height="match_parent" />

    <ListView
        android:id="@+id/activity_choose_location_area"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/color_divider"
        android:dividerHeight="@dimen/default_line"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />
</LinearLayout>
